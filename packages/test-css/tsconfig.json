{
  "compilerOptions": {
    /* Language and Environment */
    "jsx": "react",
    "target": "ESNext",
    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    /* Emit */
    "declaration": false,
    "importHelpers": true,
    /* Interop Constraints */
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    ".eslintrc.cjs",
    "jest.config.cjs",
    "rollup.config.js"
  ]
}
